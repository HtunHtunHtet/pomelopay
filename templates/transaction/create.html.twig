{% extends 'base.html.twig' %}

{% block title %}Pomelopay Dashboard - Create Transaction {% endblock %}

{% block body %}
    <div class="container">

        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Create Transaction</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Transaction</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Create Transaction</li>
                    </ol>
                </nav>
            </div>
        </div>

        {{ form_start(transactionForm,{attr: {id :'companyForm'}}) }}
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>{{ form_label(transactionForm.currency) }}</label>
                    {{ form_widget(transactionForm.currency, {'attr':{'placeholder':'Enter Currency','class': 'form-control' }}) }}
                    {% if form_errors(transactionForm.currency) | length %}
                        <span class="text-danger"> {{ form_errors(transactionForm.currency) }}</span>
                    {% endif %}
                </div>

                <div class="form-group col-md-6">
                    <label>{{ form_label(transactionForm.amount) }}</label>
                    {{ form_widget(transactionForm.amount, {'attr':{'placeholder':'Enter Amount', 'class': 'form-control'}}) }}
                    {% if form_errors(transactionForm.amount) | length %}
                        <span class="text-danger"> {{ form_errors(transactionForm.amount) }}</span>
                    {% endif %}
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>{{ form_label(transactionForm.company) }}</label>
                    {{ form_widget(transactionForm.company, {'attr':{ 'class': 'form-control'}}) }}
                    {% if form_errors(transactionForm.company) | length %}
                        <span class="text-danger"> {{ form_errors(transactionForm.company) }}</span>
                    {% endif %}
                </div>

                <div class="form-group col-md-6">
                    <label>{{ form_label(transactionForm.status) }}</label>
                    {{ form_widget(transactionForm.status, {'attr':{'placeholder':'Enter ', 'class': 'form-control'}}) }}
                    {% if form_errors(transactionForm.status) | length %}
                        <span class="text-danger"> {{ form_errors(transactionForm.status) }}</span>
                    {% endif %}
                </div>

            </div>


            <button type="submit" class="btn btn-primary">Submit</button>
        {{ form_end(transactionForm) }}

    </div>

{% endblock %}
