{% extends 'base.html.twig' %}

{% block title %}Pomelopay Dashboard - Company {% endblock %}

{% block body %}
    <div class="container">

        {% for message in app.flashes('success') %}
            <div class="alert alert-success" role="alert">
                {{ message }}
            </div>
        {% endfor %}


        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">View Transactions</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active" aria-current="page">Transactions</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class='table-responsive table-forced-height'>
                    <table id="companies" class="table table-striped table-bordered" style="width:100%" >
                        <thead>
                        <tr>
                            <td>Transaction Id</td>
                            <td>Currency</td>
                            <td>Amount</td>
                            <td>Status</td>
                            <td>Company Name</td>
                            <td>Action</td>
                        </tr>
                        </thead>
                        <tbody>
                        {% for transaction in transactions %}
                            <tr>
                                <td>{{ transaction.id }}</td>
                                <td>{{ transaction.currency }}</td>
                                <td>{{ transaction.amount }}</td>
                                <td>{{ transaction.status }}</td>
                                <td><a href="{{ path('update_company',{'id':transaction.company.id} ) }}" >{{ transaction.company.name }}</a></td>
                                <td>
                                    <a class="btn btn-primary" href="#" role="button">Update</a>
                                    <a class="btn btn-danger" href="#"  role="button">Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

   {% block javascripts %}
       {{ parent() }}
       {#{{ encore_entry_script_tags('company') }}#}

   {% endblock %}
